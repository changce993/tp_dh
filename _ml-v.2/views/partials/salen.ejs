<% for(var i=0; i<salen.length; i++) { %>
    <div class="col-12 col-sm-6 col-lg-3">
        <section class="product-box">
            <a href="/product/detail/<%= salen[i].id%>/<%= salen[i].category%>"%></a>
                
                <figure class="product-box_image">
                    <img src="/images/products/<%= salen[i].image %>" alt="imagen de producto">
                </figure>
                <article class="product-box_data">
                    <h2><%= salen[i].price %></h2>
                    <span>40% OFF</span>
                    <p><%= salen[i].name %></p>
                    <i class="fas fa-truck"></i>
                </article>
            </a>
        </section>
    </div>
<% } %>